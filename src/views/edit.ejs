<%- include ('partials/_header');  %>

<div class="container">
    <div class="row">
        <!-- formulario -->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id%>" method="post">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="inserta un titulo" class="form-control" value="<%= task.title%>">
                        </div>
                        <div class="form-group">
                            <textarea name="descripcion" cols="80" placeholder="inserta una descripcion" class="form-control"><%= task.descripcion%></textarea>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary" type="submit">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>