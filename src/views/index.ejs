<%- include ('partials/_header'); %>
    

    <div class="container">
        <div class="row">
            <!-- formulario -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="post">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="inserta un titulo" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="descripcion" cols="80" class="form-control" placeholder="inserta la descripcion"></textarea>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" type="submit">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- listas -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>titulo</th>
                            <th>descripcion</th>
                            <th>operacion</th>
                        </tr>
                    </thead>
                    <body>
                        <% for(var i = 0; i < tasks.length; i++) { %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= tasks[i].title  %></td>
                                <td><%= tasks[i].descripcion  %></td>
                                <td class="">
                                    <a href="/done/<%= tasks[i]._id %>" class="btn <%- tasks[i].status ?  'btn-success' : 'btn-dark' %>" >done</a>
                                    <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">delete</a>
                                    <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">edit</a>
                                </td>
                            </tr>
                        <% }%>
                    </body>
                </table>

            </div>
        </div>
    </div>

<%- include ('partials/_footer'); %>
